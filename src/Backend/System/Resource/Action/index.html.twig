{% extends "@backend/system/layout/layout.html.twig" %}

{% block content %}

    {% include "@backend/system/resource/title/title.html.twig" %}

    {% if filters %}
        {% include "@backend/system/resource/filter/filters.html.twig" %}
    {% endif %}

    {% if values is empty %}
        {% include "@backend/system/resource/nodata/nodata.html.twig" %}
    {% else %}
        {% include "@backend/system/resource/field/list/list.html.twig" with {
            'list_link': not backend().selection().enabled(),
            'list_more': not backend().selection().enabled(),
            'list_selection': backend().selection().enabled(),
            'list_selection_single': backend().selection().single(),
            'list_sort': not backend().selection().enabled(),
        } %}
    {% endif %}

    {% include "@backend/system/resource/selection/submits.html.twig" %}

{% endblock %}
